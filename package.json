{
  "name": "onenote-desktop",
  "productName": "OneNote",
  "version": "1.1.0",
  "description": "OneNote Desktop Client for Linux",
  "productDescription": "OneNote.com wrapped in electron packaged for Linux",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron ./src/main.js",
    "clean-slate": "rimraf dist/ release-builds/",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anujdatar/onenote-desktop"
  },
  "bugs": {
    "url": "https://github.com/anujdatar/onenote-desktop/issues"
  },
  "homepage": "https://github.com/anujdatar/onenote-desktop#readme",
  "keywords": [
    "OneNote",
    "Electron",
    "Linux",
    "desktopApp"
  ],
  "author": {
    "name": "Anuj Datar",
    "email": "anuj.datar@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "rimraf": "^2.6.3"
  },
  "dependencies": {
    "electron-store": "^4.0.0"
  },
  "build": {
    "appId": "org.anuj.onenote-desktop",
    "asar": true,
    "copyright": "Â©2019 Anuj Datar",
    "linux": {
      "category": "Notes;Office;Productivity",
      "packageCategory": "Notes;Office;Productivity",
      "description": "OneNote Desktop Client for Linux",
      "synopsis": "OneNote Desktop",
      "icon": "./src/images/icon.icns",
      "target": [
        "deb",
        "AppImage"
      ],
      "maintainer": "Anuj Datar <anuj.datar@gmail.com>",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    }
  }
}
